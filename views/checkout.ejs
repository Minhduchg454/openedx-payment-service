<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        --bg: #0f172a;
        --card: #020617;
        --accent: #22c55e;
        --accent-soft: rgba(34, 197, 94, 0.12);
        --border: #1f2937;
        --text: #e5e7eb;
        --muted: #9ca3af;
        --danger: #f97373;
      }
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        min-height: 100vh;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: radial-gradient(circle at top, #1e293b 0, #020617 55%);
        color: var(--text);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 16px;
      }
      .shell {
        width: 100%;
        max-width: 720px;
        background: linear-gradient(
          135deg,
          rgba(148, 163, 184, 0.05),
          transparent
        );
        border-radius: 24px;
        padding: 1px;
      }
      .card {
        background: radial-gradient(
            circle at top left,
            rgba(59, 130, 246, 0.16),
            transparent 58%
          ),
          radial-gradient(
            circle at bottom right,
            rgba(34, 197, 94, 0.18),
            transparent 60%
          ),
          var(--card);
        border-radius: 23px;
        padding: 24px 20px 18px;
        border: 1px solid rgba(15, 23, 42, 0.85);
        box-shadow: 0 22px 45px rgba(0, 0, 0, 0.7),
          0 0 0 1px rgba(15, 23, 42, 0.7);
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
      }
      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .brand-logo {
        width: 32px;
        height: 32px;
        border-radius: 12px;
        background: radial-gradient(
          circle at 30% 10%,
          #4ade80,
          #22c55e 45%,
          #16a34a 70%,
          #0f172a
        );
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 15px;
        color: #052e16;
        box-shadow: 0 0 0 2px rgba(15, 23, 42, 0.95),
          0 10px 22px rgba(22, 163, 74, 0.55);
      }
      .brand-text {
        display: flex;
        flex-direction: column;
      }
      .brand-title {
        font-size: 15px;
        font-weight: 600;
        letter-spacing: 0.03em;
        text-transform: uppercase;
      }
      .brand-sub {
        font-size: 12px;
        color: var(--muted);
      }
      .pill {
        font-size: 11px;
        padding: 4px 9px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(148, 163, 184, 0.3);
        color: var(--muted);
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }
      .dot {
        width: 6px;
        height: 6px;
        border-radius: 999px;
        background: #22c55e;
        box-shadow: 0 0 10px rgba(34, 197, 94, 0.9);
      }

      .section {
        border-radius: 16px;
        border: 1px solid rgba(15, 23, 42, 0.95);
        background: radial-gradient(
            circle at top left,
            rgba(248, 250, 252, 0.04),
            transparent 55%
          ),
          rgba(15, 23, 42, 0.95);
        padding: 14px 14px 10px;
        margin-bottom: 10px;
      }
      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
      }
      .section-title {
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.09em;
        color: #9ca3af;
      }
      .section-badge {
        font-size: 11px;
        padding: 2px 8px;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.4);
        color: #e5e7eb;
        background: linear-gradient(
          135deg,
          rgba(148, 163, 184, 0.18),
          rgba(15, 23, 42, 0.9)
        );
      }

      dl {
        display: grid;
        grid-template-columns: minmax(0, 1.3fr) minmax(0, 2fr);
        gap: 4px 12px;
        margin: 0;
        font-size: 13px;
      }
      dt {
        color: var(--muted);
      }
      dd {
        margin: 0;
        color: #e5e7eb;
        text-align: right;
        word-break: break-all;
      }

      .price-row {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-top: 6px;
      }
      .price-label {
        font-size: 13px;
        color: var(--muted);
      }
      .price-value {
        font-size: 20px;
        font-weight: 700;
      }
      .price-mode {
        font-size: 11px;
        color: var(--muted);
        text-transform: uppercase;
        letter-spacing: 0.09em;
      }

      .divider {
        height: 1px;
        border-radius: 999px;
        background: linear-gradient(
          to right,
          transparent,
          rgba(148, 163, 184, 0.2),
          rgba(148, 163, 184, 0.25),
          transparent
        );
        margin: 12px 0 10px;
      }

      .actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 8px;
        margin-top: 8px;
      }
      .hint {
        font-size: 11px;
        color: var(--muted);
        max-width: 360px;
      }
      button.pay-btn {
        padding: 10px 18px;
        border-radius: 999px;
        border: none;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 0.03em;
        cursor: pointer;
        background: radial-gradient(
          circle at top left,
          #4ade80,
          #22c55e 45%,
          #16a34a 70%,
          #15803d
        );
        color: #052e16;
        box-shadow: 0 14px 25px rgba(22, 163, 74, 0.55),
          0 0 0 1px rgba(34, 197, 94, 0.7);
        display: inline-flex;
        align-items: center;
        gap: 8px;
      }
      button.pay-btn[disabled] {
        opacity: 0.7;
        cursor: progress;
        box-shadow: none;
      }
      .btn-label-main {
        text-transform: uppercase;
      }
      .btn-label-sub {
        font-size: 11px;
        opacity: 0.9;
      }
      .chevron {
        font-size: 15px;
      }

      .status {
        margin-top: 10px;
        font-size: 12px;
        min-height: 18px;
      }
      .status-ok {
        color: #4ade80;
      }
      .status-error {
        color: #fca5a5;
      }
      .status-debug {
        margin-top: 8px;
        font-size: 11px;
        color: var(--muted);
        max-height: 120px;
        overflow: auto;
        background: rgba(15, 23, 42, 0.9);
        padding: 8px;
        border-radius: 10px;
        border: 1px dashed rgba(148, 163, 184, 0.3);
      }
      code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
          "Liberation Mono", "Courier New", monospace;
        font-size: 11px;
      }

      @media (max-width: 640px) {
        .card {
          padding: 18px 14px 14px;
        }
        header {
          flex-direction: column;
          align-items: flex-start;
        }
        dl {
          grid-template-columns: minmax(0, 1.1fr) minmax(0, 1.9fr);
        }
        .actions {
          flex-direction: column;
          align-items: stretch;
        }
        button.pay-btn {
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="shell">
      <div class="card">
        <header>
          <div class="brand">
            <div class="brand-logo">₵</div>
            <div class="brand-text">
              <div class="brand-title">CUSC PAY · DEMO</div>
              <div class="brand-sub">
                Node.js sandbox · không thật sự trừ tiền
              </div>
            </div>
          </div>
          <div class="pill">
            <span class="dot"></span>
            <span>Connected to LMS at <code><%= lmsBase %></code></span>
          </div>
        </header>

        <section class="section">
          <div class="section-header">
            <div class="section-title">Thông tin đơn hàng</div>
            <div class="section-badge">ORDER #<%= order.id %></div>
          </div>
          <dl>
            <dt>Học viên</dt>
            <dd><%= username %> (id: <%= user.id %>)</dd>

            <dt>Khóa học</dt>
            <dd><code><%= courseId %></code></dd>

            <dt>Mode</dt>
            <dd><%= pricing.displayName %> (<%= pricing.mode %>)</dd>

            <dt>Redirect sau khi thanh toán</dt>
            <dd><code><%= nextUrl %></code></dd>
          </dl>

          <div class="price-row">
            <div>
              <div class="price-label">Số tiền cần thanh toán</div>
              <div class="price-mode">
                Lấy từ API course-pricing (mode: <%= pricing.mode %>)
              </div>
            </div>
            <div class="price-value">
              <%= Number(pricing.price).toLocaleString('vi-VN') %>
              <span style="font-size: 13px; font-weight: 500"
                ><%= pricing.currency %></span
              >
            </div>
          </div>
        </section>

        <div class="divider"></div>

        <section>
          <div class="actions">
            <div class="hint">
              Nhấn nút bên phải để giả lập callback thanh toán thành công.
              Node.js sẽ gọi API
              <code>orders/&lt;id&gt;/status</code> với trạng thái
              <code>paid</code>, sau đó trình duyệt sẽ được tự động chuyển về
              trang course (<code>next</code>).
            </div>
            <button
              class="pay-btn"
              id="payBtn"
              data-order-id="<%= order.id %>"
              data-next-url="<%= nextUrl %>"
            >
              <span class="chevron">●</span>
              <div>
                <div class="btn-label-main">Giả lập thanh toán thành công</div>
                <div class="btn-label-sub">
                  Send callback &amp; redirect về LMS
                </div>
              </div>
            </button>
          </div>

          <div class="status" id="status"></div>
          <div class="status-debug" id="debug"></div>
        </section>
      </div>
    </div>

    <script>
      const payBtn = document.getElementById("payBtn");
      const statusEl = document.getElementById("status");
      const debugEl = document.getElementById("debug");

      function setStatus(text, type) {
        statusEl.textContent = text || "";
        statusEl.className =
          "status " +
          (type === "error"
            ? "status-error"
            : type === "ok"
            ? "status-ok"
            : "");
      }

      function setDebug(obj) {
        if (!obj) {
          debugEl.textContent = "";
          return;
        }
        try {
          debugEl.textContent = JSON.stringify(obj, null, 2);
        } catch (e) {
          debugEl.textContent = String(obj);
        }
      }

      payBtn.addEventListener("click", async () => {
        const orderId = payBtn.dataset.orderId;
        const nextUrl = payBtn.dataset.nextUrl;

        setStatus("Đang gửi callback thanh toán lên LMS...", "");
        setDebug({ orderId, nextUrl });

        payBtn.disabled = true;

        try {
          const res = await fetch("/simulate-success", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ orderId, nextUrl }),
          });

          const data = await res.json().catch(() => null);

          if (!res.ok || !data || !data.ok) {
            setStatus(
              "Thanh toán giả lập thất bại. Xem thêm chi tiết debug phía dưới.",
              "error"
            );
            setDebug(data || { httpStatus: res.status });
            payBtn.disabled = false;
            return;
          }

          setStatus(
            "Thanh toán giả lập thành công! Đang chuyển về LMS...",
            "ok"
          );
          setDebug(data);

          const redirectUrl = data.redirect || nextUrl || "/";
          setTimeout(() => {
            window.location.href = redirectUrl;
          }, 800);
        } catch (err) {
          console.error(err);
          setStatus(
            "Có lỗi khi gọi /simulate-success. Xem console hoặc khung debug.",
            "error"
          );
          setDebug(String(err));
          payBtn.disabled = false;
        }
      });
    </script>
  </body>
</html>
